<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ruanchuangsoft.platform.dao.SysDeptDao">

	<select id="queryObject" resultType="com.ruanchuangsoft.platform.entity.SysDeptEntity">
		select * from sys_dept where dept_id = #{value}
	</select>

	<select id="queryListParentId" resultType="com.ruanchuangsoft.platform.entity.SysDeptEntity">
		select * from sys_dept where parent_id = #{parentId} order by order_num asc
	</select>


	<select id="queryList" resultType="com.ruanchuangsoft.platform.entity.SysDeptEntity">
		select m.*,(select p.name from sys_dept p where p.dept_id = m.parent_id) as parentName
		from sys_dept m
		<where>
			<if test="deptId!=null" >
				m.parent_id=#{deptId}
			</if>
		</where>
		order by m.order_num asc
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>

	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sys_dept 
	</select>
	 
	<insert id="save" parameterType="com.ruanchuangsoft.platform.entity.SysDeptEntity" useGeneratedKeys="true" keyProperty="deptId">
		insert into sys_dept
		(
			`parent_id`, 
			`name`, 
			`type`, 
			`order_num`
		)
		values
		(
			#{parentId}, 
			#{name}, 
			#{type}, 
			#{orderNum}
		)
	</insert>
	 
	<update id="update" parameterType="com.ruanchuangsoft.platform.entity.SysDeptEntity">
		update sys_dept 
		<set>
			<if test="parentId != null">`parent_id` = #{parentId}, </if>
			<if test="name != null">`name` = #{name}, </if>
			<if test="type != null">`type` = #{type}, </if>
			<if test="orderNum != null">`order_num` = #{orderNum}</if>
		</set>
		where dept_id = #{deptId}
	</update>
	
	<delete id="delete">
		delete from sys_dept where dept_id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from sys_dept where dept_id in 
		<foreach item="deptId" collection="array" open="(" separator="," close=")">
			#{deptId}
		</foreach>
	</delete>

</mapper>