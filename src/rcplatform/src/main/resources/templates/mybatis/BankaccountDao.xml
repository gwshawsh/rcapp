<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ruanchuangsoft.platform.dao.BankaccountDao">

	<select id="queryObject" resultType="com.ruanchuangsoft.platform.entity.BankaccountEntity">
		select
				    			    			    			    			    			    	        a.*

		from bankaccount a where id = #{value}
	</select>

	<select id="queryList" resultType="com.ruanchuangsoft.platform.entity.BankaccountEntity">
		select
																																        a.*
		from bankaccount a
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from bankaccount 
	</select>
	 
	<insert id="save" parameterType="com.ruanchuangsoft.platform.entity.BankaccountEntity" useGeneratedKeys="true" keyProperty="id">
		insert into bankaccount
		(
			`bankname`, 
			`subbank`, 
			`accountperson`, 
			`accountno`, 
			`uptdate`
		)
		values
		(
			#{bankname}, 
			#{subbank}, 
			#{accountperson}, 
			#{accountno}, 
			#{uptdate}
		)
	</insert>
	 
	<update id="update" parameterType="com.ruanchuangsoft.platform.entity.BankaccountEntity">
		update bankaccount 
		<set>
			<if test="bankname != null">`bankname` = #{bankname}, </if>
			<if test="subbank != null">`subbank` = #{subbank}, </if>
			<if test="accountperson != null">`accountperson` = #{accountperson}, </if>
			<if test="accountno != null">`accountno` = #{accountno}, </if>
			<if test="uptdate != null">`uptdate` = #{uptdate}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from bankaccount where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from bankaccount where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>