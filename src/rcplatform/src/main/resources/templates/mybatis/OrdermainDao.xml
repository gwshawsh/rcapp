    <update id="auditBatch">
        update  ordermain set billstatus=billstatus+1 where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <update id="unauditBatch">
        update  ordermain set billstatus=billstatus-1 where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>
	
