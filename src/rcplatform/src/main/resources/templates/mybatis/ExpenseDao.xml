<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ruanchuangsoft.platform.dao.ExpenseDao">

	<select id="queryObject" resultType="com.ruanchuangsoft.platform.entity.ExpenseEntity">
		select m.*, (select p.name from sys_dept p where p.dept_id = m.dept_id) as deptName,
		 (select q.name from costcategory q where q.id = m.costcategory_id) as costcategoryName
		from expense m where m.id = #{value}

	</select>

	<select id="queryList" resultType="com.ruanchuangsoft.platform.entity.ExpenseEntity">
		select m.*, (select p.name from sys_dept p where p.dept_id = m.dept_id) as deptName,
		(select q.name from costcategory q where q.id = m.costcategory_id) as costcategoryName
		from expense m
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from expense 
	</select>
	 
	<insert id="save" parameterType="com.ruanchuangsoft.platform.entity.ExpenseEntity" useGeneratedKeys="true" keyProperty="id">
		insert into expense
		(
			`billno`, 
			`applyuser`, 
			`dept_id`, 
			`applydate`, 
			`costcategory_id`, 
			`expensemoney`, 
			`reason`, 
			`receiver`, 
			`paytype`, 
			`accuser`, 
			`accdate`
		)
		values
		(
			#{billno}, 
			#{applyuser}, 
			#{deptId}, 
			#{applydate}, 
			#{costcategoryId}, 
			#{expensemoney}, 
			#{reason}, 
			#{receiver}, 
			#{paytype}, 
			#{accuser}, 
			#{accdate}
		)
	</insert>
	 
	<update id="update" parameterType="com.ruanchuangsoft.platform.entity.ExpenseEntity">
		update expense 
		<set>
			<if test="billno != null">`billno` = #{billno}, </if>
			<if test="applyuser != null">`applyuser` = #{applyuser}, </if>
			<if test="deptId != null">`dept_id` = #{deptId}, </if>
			<if test="applydate != null">`applydate` = #{applydate}, </if>
			<if test="costcategoryId != null">`costcategory_id` = #{costcategoryId}, </if>
			<if test="expensemoney != null">`expensemoney` = #{expensemoney}, </if>
			<if test="reason != null">`reason` = #{reason}, </if>
			<if test="receiver != null">`receiver` = #{receiver}, </if>
			<if test="paytype != null">`paytype` = #{paytype}, </if>
			<if test="accuser != null">`accuser` = #{accuser}, </if>
			<if test="accdate != null">`accdate` = #{accdate}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from expense where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from expense where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>