<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ruanchuangsoft.platform.dao.HeavymainDao">

	<select id="queryObject" resultType="com.ruanchuangsoft.platform.entity.HeavymainEntity">
		select a.*,
		ifnull((select name from organization b where a.orgid=b.id),'') as orgname,
		ifnull((select name from place b where a.takeboxplaceid=b.id),'') as takeboxplacename,
		ifnull((select name from place b where a.endplaceid=b.id),'') as endplacename,
		ifnull((select name from place b where a.portid=b.id),'') as portname from
		heavymain a
		where id = #{value}
	</select>

	<select id="queryList" resultType="com.ruanchuangsoft.platform.entity.HeavymainEntity">
		select a.*,
		ifnull((select name from organization b where a.orgid=b.id),'') as orgname,
		ifnull((select name from place b where a.takeboxplaceid=b.id),'') as takeboxplacename,
		ifnull((select name from place b where a.endplaceid=b.id),'') as endplacename,
		ifnull((select name from place b where a.portid=b.id),'') as portname
		from heavymain a
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from heavymain 
	</select>
	 
	<insert id="save" parameterType="com.ruanchuangsoft.platform.entity.HeavymainEntity" useGeneratedKeys="true" keyProperty="id">
		insert into heavymain
		(
			`billno`, 
			`orgid`,
			`ladingcode`, 
			`shipname`, 
			`flight`, 
			`portid`, 
			`boxqty`, 
			`boxtype`, 
			`endplaceid`,
			`bgnshipdate`, 
			`endshipdate`, 
			`bgnplanarrtime`, 
			`endplanarrtime`, 
			`remark`, 
			`billstatus`, 
			`makeuser`, 
			`makedate`, 
			`accuser`, 
			`accdate`, 
			`uptdate`
		)
		values
		(
			#{billno}, 
			#{orgId}, 
			#{ladingcode}, 
			#{shipname}, 
			#{flight}, 
			#{portid}, 
			#{boxqty}, 
			#{boxtype}, 
			#{endplaceId}, 
			#{bgnshipdate}, 
			#{endshipdate}, 
			#{bgnplanarrtime}, 
			#{endplanarrtime}, 
			#{remark}, 
			#{billstatus}, 
			#{makeuser}, 
			#{makedate}, 
			#{accuser}, 
			#{accdate}, 
			#{uptdate}
		)
	</insert>
	 
	<update id="update" parameterType="com.ruanchuangsoft.platform.entity.HeavymainEntity">
		update heavymain 
		<set>
			<if test="billno != null">`billno` = #{billno}, </if>
			<if test="orgId != null">`orgid` = #{orgId}, </if>
			<if test="ladingcode != null">`ladingcode` = #{ladingcode}, </if>
			<if test="shipname != null">`shipname` = #{shipname}, </if>
			<if test="flight != null">`flight` = #{flight}, </if>
			<if test="portid != null">`portid` = #{portid}, </if>
			<if test="boxqty != null">`boxqty` = #{boxqty}, </if>
			<if test="boxtype != null">`boxtype` = #{boxtype}, </if>
			<if test="endplaceId != null">`endplaceid` = #{endplaceId}, </if>
			<if test="bgnshipdate != null">`bgnshipdate` = #{bgnshipdate}, </if>
			<if test="endshipdate != null">`endshipdate` = #{endshipdate}, </if>
			<if test="bgnplanarrtime != null">`bgnplanarrtime` = #{bgnplanarrtime}, </if>
			<if test="endplanarrtime != null">`endplanarrtime` = #{endplanarrtime}, </if>
			<if test="remark != null">`remark` = #{remark}, </if>
			<if test="billstatus != null">`billstatus` = #{billstatus}, </if>
			<if test="makeuser != null">`makeuser` = #{makeuser}, </if>
			<if test="makedate != null">`makedate` = #{makedate}, </if>
			<if test="accuser != null">`accuser` = #{accuser}, </if>
			<if test="accdate != null">`accdate` = #{accdate}, </if>
			<if test="uptdate != null">`uptdate` = #{uptdate}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from heavymain where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from heavymain where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>